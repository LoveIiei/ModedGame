<Window x:Class="ModedGame.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Download Progress" Height="150" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="ProgressText" Grid.Row="0" 
                   Text="Downloading..." 
                   FontSize="14" 
                   TextAlignment="Center"
                   Margin="0,0,0,10"/>

        <ProgressBar x:Name="ProgressBar" Grid.Row="1" 
                     Height="20" 
                     Minimum="0" 
                     Maximum="100" 
                     Value="0"/>

        <TextBlock x:Name="PercentageText" Grid.Row="2" 
                   Text="0%" 
                   FontSize="12" 
                   TextAlignment="Center"
                   Margin="0,10,0,0"/>
    </Grid>
</Window>