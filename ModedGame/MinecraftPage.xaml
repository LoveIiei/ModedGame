<Page x:Class="ModedGame.MinecraftPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ModedGame"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MinecraftPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="20">
            <Button x:Name="File" Content="Select Jar/ZIP" HorizontalAlignment="Left" 
                    Margin="10" Click="File_Click"></Button>
            <ComboBox x:Name="FileTypePicker" Width="100" Height="25"
                  ItemsSource="{Binding MCFileType}"
                  SelectedItem="{Binding SelectedType}"
                  DisplayMemberPath="Name"
                  SelectedValuePath="Id"
                  Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
