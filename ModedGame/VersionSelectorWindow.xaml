<Window x:Class="ModedGame.VersionSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select a Version" Height="450" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ListView x:Name="VersionsListView" Grid.Row="0" Margin="0,0,0,10" SelectionMode="Single">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Version" Width="150" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Game Versions" Width="150" DisplayMemberBinding="{Binding GameVersionsText}" />
                    <GridViewColumn Header="Loaders" Width="100" DisplayMemberBinding="{Binding LoadersText}" />
                    <GridViewColumn Header="Release Type" Width="100" DisplayMemberBinding="{Binding VersionType}" />
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="SelectButton" Content="Select" Width="100" Margin="0,0,10,0" IsDefault="True" Click="SelectButton_Click" />
            <Button x:Name="CancelButton" Content="Cancel" Width="100" IsCancel="True" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>